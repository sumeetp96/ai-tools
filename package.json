{
  "name": "ai-tools",
  "version": "0.1.0",
  "description": "CLI and web tools powered by AI models",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "ai-tools": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "dev": "node --watch src/cli.js",
    "web:server": "cd src/web/server && npm run dev",
    "web:client": "cd src/web/client && npm run dev",
    "web:dev": "concurrently \"npm run web:server\" \"npm run web:client\"",
    "web:build": "cd src/web/client && npm run build",
    "web:preview": "cd src/web/client && npm run preview"
  },
  "keywords": [
    "ai",
    "cli",
    "tools",
    "ollama",
    "documentation",
    "compression"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ollama": "^0.5.0",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
